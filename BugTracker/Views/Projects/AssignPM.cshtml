@model BugTracker.Models.ViewModels.AssignPMViewModel


@{
    ViewData["Title"] = "Assign PM";
}

<h1>Project : @Model.Project.Name</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignPM" asp-controller="Projects" method="post">
            <input asp-for="Project.Id" hidden=""/>

            <p>@Model.Project.Name</p>

            <p>@Model.Project.Description</p>

            <div class="form-group">
                <label class="control-label">Select Project Manager</label>
                <select asp-for="PMID" class="form-control" asp-items="@Model.PMList">
                    <option></option>
                </select>

                <input class="btn btn-primary btn-sm" value="Assign" type="submit"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="UnassignedProjects">Back to List</a>
</div>